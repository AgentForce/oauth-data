{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [ "es2015" ],
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.js.map": true
    }

    
}